<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:focusableInTouchMode="true"
    android:transitionGroup="true">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/lv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:tint="@color/white"
        app:srcCompat="@mipmap/ic_launcher" />
    <!--android:text="https://fingerprinter.herokuapp.com"-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_edt"
        style="@style/EditTextNormalTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ip address"
        android:textColorHint="@color/white"
        android:theme="@style/EditTextNormalTheme">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_ip_address"
            style="@style/EditTextNormalTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:singleLine="true"
            android:text="http://192.168.0.197:3000"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:theme="@style/EditTextNormalTheme" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_edt"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_rect_corner_while_select"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:visibility="invisible" />
</RelativeLayout>