<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/start_pause_motion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Start" />

    <Spinner
        android:id="@+id/activity_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/start_pause_motion_button"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/start_pause_motion_button"
        android:layout_toStartOf="@+id/start_pause_motion_button"
        android:background="@color/colorPrimaryDark"
        android:entries="@array/activity_types"
        android:prompt="@string/activity_prompt" />

    <TextView
        android:id="@+id/result_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="186dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>